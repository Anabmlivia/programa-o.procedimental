//EXERCICIO6

#include <stdio.h>
#include <stdlib.h>

int main()
{
    int x;
    int y;

    printf("Digite dois numeros inteiros:\n");
    scanf("%d%d",x,y);

    if(x>y){
        printf("%d e maior e a diferença entre os numero que voce digitou e %d.",x,x-y);
    }else{
        printf("%d e maior e a diferença entre os numero que voce digitou e %d.",y,y-x);
    }


    return 0;
}
