//exercicio 17
/*
#include <stdio.h>

int somaint(int numero1, int numero2) {
    if (numero1 <= 0 || numero2 <= 0) {
        printf("Os números devem ser positivos!\n");
        return -1; 
    }
    
    int menor = (numero1 < numero2) ? numero1 : numero2;
    int maior = (numero1 > numero2) ? numero1 : numero2;
    int soma = 0;
    
    for (int i = menor + 1; i < maior; i++) {
        soma += i;
    }
    
    return soma;
}

int main() {
    int numero1, numero2;
    
    printf("Digite o primeiro número: ");
    scanf("%d", &numero1);
    printf("Digite o segundo número: ");
    scanf("%d", &numero2);
    
    int resultado = somaint(numero1, numero2);
    
    if (resultado != -1) {
        printf("A soma dos números inteiros entre %d e %d é: %d\n", numero1, numero2, resultado);
    }
    
    return 0;
}
*/
