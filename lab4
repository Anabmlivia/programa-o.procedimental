//exercicio 3
/*
#include <stdio.h>

int verifica(int numero) {
    if (numero > 0) {
        return 1;
    } else if (numero < 0) {
        return -1;
    } else {
        return 0; 
    }
}

int main() {
    int numero;
    
    printf("Digite um número inteiro: ");
    scanf("%d", &numero);
    
    int resultado = verifica(numero);
    
    if (resultado == 1) {
        printf("O número é positivo.\n");
    } else if (resultado == -1) {
        printf("O número é negativo.\n");
    } else {
        printf("O número é igual a zero.\n");
    }
    
    return 0;
}
*/

//exercicio 4
/*
#include <stdio.h>
#include <math.h>

int verificar_quadrado_perfeito(int numero) {
    if (numero < 0) {
        return 0; // o número é negativo então não é um quadrado perfeito
    }
    
    int raiz = sqrt(numero);
    
    if (raiz * raiz == numero) {
        return 1; // o número é um quadrado perfeito
    } else {
        return 0; // o número não é um quadrado perfeito
    }
}

int main() {
    int numero;
    
    printf("Digite um número inteiro: ");
    scanf("%d", &numero);
    
    int resultado = verificar_quadrado_perfeito(numero);
    
    if (resultado == 1) {
        printf("O número é um quadrado perfeito.\n");
    } else {
        printf("O número não é um quadrado perfeito.\n");
    }
    
    return 0;
}
*/

//exercicio 5 
/*
#include <stdio.h>

double calculo_volume_esfera(double raio) {
    double volume = (4.0/3.0) * 3.14 * raio * raio * raio;
    return volume;
}

int main() {
    double raio;
    
    printf("Digite o raio da esfera: ");
    scanf("%lf", &raio);
    
    double volume = calcul0_volume_esfera(raio);
    
    printf("O volume da esfera de raio %.2lf é %.2lf\n", raio, volume);
    
    return 0;
}
*/

//exercicio 6
/*
#include <stdio.h>

int converter_para_segundos(int horas, int minutos, int segundos) {
    int conv_segundos = horas * (3600 + minutos) * (60 + segundos);
    return conv_segundos;
}

int main() {
    int horas;
    int minutos; 
    int segundos;
    
    printf("Digite as horas: ");
    scanf("%d", &horas);
    printf("Digite os minutos: ");
    scanf("%d", &minutos);
    printf("Digite os segundos: ");
    scanf("%d", &segundos);
    
    int conv_segundos = converter_para_segundos(horas, minutos, segundos);
    
    printf("O tempo total em segundos é: %d\n", conv_segundos);
    
    return 0;
}
*/

//exercicio 7
/*
#include <stdio.h>

double converter_Fahrenheit(double celsius) {
    double fahrenheit = celsius * (9.0 / 5.0) + 32.0;
    return fahrenheit;
}

int main() {
    double celsius;
    
    printf("Digite a temperatura em Celsius: ");
    scanf("%lf", &celsius);
    
    double fahrenheit = converter_Fahrenheit(celsius);
    
    printf("A temperatura em Fahrenheit é: %.2lf\n", fahrenheit);
    
    return 0;
}
*/

//exercicio 8
/*
#include <stdio.h>
#include <math.h>

double calcula_Hipotenusa(double a, double b) {
    double quadradoA = a * a;
    double quadradoB = b * b;
    double soma = quadradoA + quadradoB;
    double hipotenusa = sqrt(soma);
    return hipotenusa;
}

int main() {
    double catA, catB;
    
    printf("Digite o valor do cateto A: ");
    scanf("%lf", &catA);
    printf("Digite o valor do cateto B: ");
    scanf("%lf", &catB);
    
    double hipotenusa = calcula_Hipotenusa(catetoA, catetoB);
    
    printf("O valor da hipotenusa é: %.2lf\n", hipotenusa);
    
    return 0;
}
*/

//exercicio 9
/*
#include <stdio.h>

double volume_cilindro(double altura, double raio) {
    double quadrado_raio = raio * raio;
    double pi = 3.141592;
    double volume = pi * quadrado_raio * altura;
    return volume;
}

int main() {
    double altura, raio;
    
    printf("Digite a altura do cilindro: ");
    scanf("%lf", &altura);
    printf("Digite o raio do cilindro: ");
    scanf("%lf", &raio);
    
    double volume =volume_cilindro(altura, raio);
    
    printf("O volume do cilindro é: %.2lf\n", volume);
    
    return 0;
}
*/

