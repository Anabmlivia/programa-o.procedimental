//exercicio 11
/*
#include <stdio.h>

double calc_media(double nota1, double nota2, double nota3, char letra) {
    double media;
    
    if (letra == 'A' || letra == 'a') {
        media = (nota1 + nota2 + nota3) / 3.0;
    } else if (letra == 'P' || letra == 'p') {
        media = (nota1 * 5.0 + nota2 * 3.0 + nota3 * 2.0) / 10.0;
    } else {
        printf("Letra inválida! Por favor, informe 'A' ou 'P'.\n");
        return -1.0;  // retorna um erro
    }
    
    return media;
}

int main() {
    double nota1, nota2, nota3;
    char letra;
    
    printf("Digite a primeira nota: ");
    scanf("%lf", &nota1);
    printf("Digite a segunda nota: ");
    scanf("%lf", &nota2);
    printf("Digite a terceira nota: ");
    scanf("%lf", &nota3);
    printf("Digite a letra (A ou P): ");
    scanf(" %c", &letra);
    
    double media = calc_media(nota1, nota2, nota3, letra);
    
    if (media != -1.0) {
        printf("A média do aluno é: %.2lf\n", media);
    }
    
    return 0;
}
*/

//exercicio 12
/*
#include <stdio.h>

int somar(int numero) {
    if (numero <= 0) {
        printf("Número inválido!\n");
        return -1; // retorna um erro
    }
    
    int soma = 0;
    
    while (numero > 0) {
        int algarismo = numero % 10;
        soma += algarismo;
        numero /= 10;
    }
    
    return soma;
}

int main() {
    int numero;
    
    printf("Digite um número inteiro maior que zero: ");
    scanf("%d", &numero);
    
    int resultado = somar(numero);
    
    if (resultado != -1) {
        printf("A soma dos algarismos é: %d\n", resultado);
    }
    
    return 0;
}
*/

//exercicio 13
/*
#include <stdio.h>

double operacao(double valor1, double valor2, char operador) {
    double resultado;
    
    switch (operador) {
        case '+':
            resultado = valor1 + valor2;
            break;
        case '-':
            resultado = valor1 - valor2;
            break;
        case '*':
            resultado = valor1 * valor2;
            break;
        case '/':
            if (valor2 != 0) {
                resultado = valor1 / valor2;
            } else {
                printf("Erro: Divisão por zero não é permitida!\n");
                return 0; 
            }
            break;
        default:
            printf("Operador inválido! Use '+', '-', '*' ou '/'.\n");
            return 0;
    }
    
    return resultado;
}

int main() {
    double valor1, valor2;
    char operador;
    
    printf("Digite o primeiro valor: ");
    scanf("%lf", &valor1);
    printf("Digite o segundo valor: ");
    scanf("%lf", &valor2);
    printf("Digite o operador (+, -, * ou /): ");
    scanf(" %c", &operador);
    
    double resultado = operacao(valor1, valor2, operador);
    
    printf("O resultado da operação é: %.2lf\n", resultado);
    
    return 0;
}
*/

