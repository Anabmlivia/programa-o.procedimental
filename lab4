        printf("=");
    }
    
    printf("\n");
}

int main() {
    int sequencia;
    
    printf("Digite a quantidade de sinais de igual: ");
    scanf("%d", &sequencia);
    
    desenho_da_linha(sequencia);
    
    return 0;
}
